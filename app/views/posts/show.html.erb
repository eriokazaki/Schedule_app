<% if flash[:notice] %>
   <p class="notice"><%= flash[:notice] %></p>
<% end %>

<h3>スケジュール詳細</h3>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @post.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @post.start_at.to_s(:datetime_jp) %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @post.end_at.to_s(:datetime_jp) %></td>
  </tr>
  <tr>
    <th>作成日時</th>
    <td><%= @post.created_at.to_s(:datetime_hour_jp) %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td><%= @post.is_all_day %></td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @post.memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
  </ul>
</div>